@model DoAn_ShopGiay.Models.GIAY

@{
    ViewBag.Title = "Thêm Mới Giày";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h2 style="text-align:center; font-weight: bold; color: blue; ">Thêm Mới Sản Phẩm</h2>
<hr />
@using (Html.BeginForm("ThemmoiGiay", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-left: 300px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="width: 500px">
            <div style="text-align: right; width: 150px; ">Tên Giày: </div><br />
            <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
                @Html.EditorFor(model => model.TenGIAY, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenGIAY, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div style="text-align: right; width: 150px; ">Giá Bán: </div><br />
            <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
                @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Giaban, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div style="text-align: right; width: 150px; ">Bảo Hành: </div><br />
            <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div style="text-align: right; width: 150px; ">Hình Ảnh: </div><br />
            <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
                <input type="file" name="fileupload" />
                @*thong bao chung*@
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <div style="text-align: right; width: 150px; ">Ngày Cập Nhật: </div><br />
            <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
                <input type="date" name="Ngaycapnhat" />
                @Html.ValidationMessageFor(model => model.Ngaycapnhat, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div style="text-align: right; width: 150px; ">Loại Giày: </div><br />
            <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
                @Html.DropDownList("MaLOAI")
            </div>
        </div>
        <div class="form-group">
            <div style="text-align: right; width: 150px;">Hãng Sản Xuất: </div><br />
            <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
                @Html.DropDownList("MaHANG")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left: 240px;">
                <input style="font-weight: bold;" type="submit" value="Thêm Mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<div style="text-align:center ">
    @Html.ActionLink("Trở Về", "Giay")
</div>
