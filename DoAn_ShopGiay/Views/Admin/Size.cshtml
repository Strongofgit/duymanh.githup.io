@model IEnumerable<DoAn_ShopGiay.Models.SIZEGIAY>

@{
    ViewBag.Title = "Quản lý Size";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h2 style="text-align:center; color: blue; font-weight: bold; ">Quản Lý Size</h2>
<hr />

<table class="table" style="margin-left: 380px; width: 500px">
    <tr>
        <th style="border: 1px #000000 solid; text-align: center; font-size: 16px; width: 40%; ">
            Mã Size
        </th>
        <th style="border: 1px #000000 solid; text-align: center; font-size: 16px; width: 40%; ">
            Size
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="border: 1px #000000 solid; text-align: center; font-size: 15px; ">
                @Html.DisplayFor(modelItem => item.MaSize)
            </td>
            <td style="border: 1px #000000 solid; text-align: center; font-size: 15px; ">
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td style="border: 1px #000000 solid; text-align: center; font-size: 15px; ">
                @Html.ActionLink("Sửa", "SuaSize", new { id = item.MaSize })
            </td>
            <td style="border: 1px #000000 solid; text-align: center; font-size: 15px; ">
                @Html.ActionLink("Xóa", "XoaSize", new { id = item.MaSize })
            </td>
        </tr>
    }

</table>
<hr />
<p style="border: 2px black solid; border-radius: 8px; margin-left: 540px; text-align:center ; width: 90px; padding: 5px;">
    @Html.ActionLink("Thêm Mới", "ThemmoiSize")
</p>

<div style="border: 2px black solid; border-radius: 8px; margin-left: 540px; text-align:center ; width: 90px; padding: 5px;">
    @Html.ActionLink("TRỞ VỀ", "Giay")
</div>