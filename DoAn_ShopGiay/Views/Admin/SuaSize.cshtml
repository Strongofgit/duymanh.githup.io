@model DoAn_ShopGiay.Models.SIZEGIAY

@{
    ViewBag.Title = "Sửa Size";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h3 style="text-align: center; font-weight: bold; color: blue">ĐIỀU CHỈNH SIZE</h3>
<hr />
<br />
<br />
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaSize)

        <div class="form-group" style="margin-left: 300px;">
            <div style="text-align: right; width: 150px; ">Size: </div><br />
            <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
                @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Size, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left: 400px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div><br />
    </div>
}

<div class="form-actions no-color" style="font-size: 18px; margin-left: 530px;">
    @Html.ActionLink("TRỞ VỀ", "Size")
</div>
