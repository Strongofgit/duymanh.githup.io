@model DoAn_ShopGiay.Models.GIAY

@{
    ViewBag.Title = "Sửa Giày";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h3 style="text-align: center; font-weight: bold; color: blue">ĐIỀU CHỈNH THÔNG TIN GIÀY</h3>
<hr />

@using (Html.BeginForm("Suagiay", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="margin-left: 300px;">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaGIAY)


    <div class="form-group" style="width: 500px">
        <div style="text-align: right; width: 150px; ">Mã Giày: </div><br />
        <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
            @Html.EditorFor(model => model.MaGIAY, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaGIAY, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="width: 500px">
        <div style="text-align: right; width: 150px; ">Tên Giày: </div><br />
        <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
            @Html.EditorFor(model => model.TenGIAY, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenGIAY, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div style="text-align: right; width: 150px; ">Giá Bán: </div><br />
        <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
            @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Giaban, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div style="text-align: right; width: 150px; ">Bảo Hành: </div><br />
        <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
            @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div style="text-align: right; width: 150px; ">Hình Ảnh: </div><br />
        <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
            <input type="file" name="fileupload" />
            <img src="@Url.Content("~/Hinhsanpham/"+ Model.Anhbia)" width="120px" /> (Ảnh hiện tại)
            @*thong bao chung*@
            @ViewBag.Thongbao
        </div>
    </div>

    <div class="form-group">
        <div style="text-align: right; width: 150px; ">Ngày Cập Nhật: </div><br />
        <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
            @Html.EditorFor(model => model.Ngaycapnhat, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ngaycapnhat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div style="text-align: right; width: 150px; ">Loại Giày: </div><br />
        <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
            @Html.DropDownList("MaLOAI")
        </div>
    </div>
    <div class="form-group">
        <div style="text-align: right; width: 150px;">Hãng Sản Xuất: </div><br />
        <div class="col-md-10" style="margin-left: 150px; margin-top: -45px;">
            @Html.DropDownList("MaHANG")
        </div>
    </div>
    <div class="form-actions no-color" style="font-size: 18px; margin-left: 450px;">
        <input type="submit" value="Lưu" class="btn btn-default" /> |   
        @Html.ActionLink("TRỞ VỀ", "Giay")   
    </div>
</div>
}

